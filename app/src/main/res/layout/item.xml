<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:layout_margin="3dp"
    android:background="@color/item">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="8">
            <TextView
                android:id="@+id/tvTenCV"
                android:layout_weight="2"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quet nha"
                android:textColor="@color/background"/>
            <TextView
                android:id="@+id/tvNgay"
                android:layout_marginLeft="20dp"
                android:layout_weight="2"
                android:text="20/10/2022"
                android:textColor="@color/background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginLeft="20dp"
                android:textColor="@color/background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cong tac: "/>
            <TextView
                android:id="@+id/tvCongTac"
                android:layout_weight="1"
                android:textColor="@color/background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="True"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="8">
            <TextView
                android:id="@+id/tvNoiDung"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quet het ca nha"
                android:textColor="@color/background"
                android:layout_weight="5"/>
            <TextView
                android:id="@+id/tvTinhTrang"
                android:layout_marginLeft="45dp"
                android:text="Chua thuc hien"
                android:textColor="@color/background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>